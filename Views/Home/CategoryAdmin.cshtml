@page
@model Baligyaay.Views.Home.CategoryAdmin

<div>
  <div class="d-flex justify-content-between mt-10">
    <h2>Product Categories</h2>
    <div class="">
      <button
      class="btn btn-discovery"
      data-bs-toggle="modal"
      data-bs-target="#DataModal3"
    >
      Add Category
    </button>
</button>
  <button type="button" class="btn btn-discovery position-relative" id="product_list">
  <i class="fa-solid fa-couch"></i>
</button>
  <button type="button" class="btn btn-discovery position-relative" id="customer_list">
  <i class="fa-solid fa-users"></i>
</button>
  <button type="button" class="btn btn-discovery position-relative" id="logout">
  <i class="fa-solid fa-right-from-bracket"></i>
</button>
    </div>
  </div>
  <table
    id="CustomerTable"
    class="table table-borderless table-stipped table-hover"
    data-url=""
    data-side-pagination="client"
    data-toggle="table"
    data-pagination="true"
    data-show-toggle="true"
    data-show-columns="true"
  >
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>

    </tbody>
  </table>

  <div id="DataModal3" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">Category</h3>
          <button
            type="button"
            class="close"
            data-bs-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true" data-bs-dismiss="modal">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <form id="category">
              <div class="row d-flex justify-content-center">
                <div class="col-md-5 mb-3">
                  <label for="category_name" class="col-form-label"
                    >Category Name</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    name="user"
                    id="category_name"
                    required
                  />
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="button"
            class="btn btn-discovery w-25"
            data-bs-dismiss="modal"
          >
            Add Category
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/home/category.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
